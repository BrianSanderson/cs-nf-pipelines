//====================  Nextflow/Container Config  ==========

manifest {
    name = "prepare_emase"
    description = 'Pipeline for Generating Pseudoreference files'
    author = 'Michael Lloyd, Copyright Jackson Laboratory 2023'
}

params {

    num_generations = 100
    ensembl_build = 105
    haplotype_list = 'A, B, C, D, E, F, G, H'

    emase_gene2transcript = '/projects/churchill-lab/projects/GBRS_GRCm39/eight_way_transcriptome/primary_assembly/emase/emase.gene2transcripts.tsv'

    pubdir = "/fastscratch/${USER}" 

    tmpdir = "/fastscratch/${USER}"
}
