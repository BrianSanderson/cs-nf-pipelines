manifest {
    name = "RNASeq"
    description = 'Pipeline for processing of RNASeq samples.'
    author = 'Anuj Srivastava, Carolyn Paisie, Copyright Jackson Laboratory 2021'
    dsl2_adaptation = 'Barry Guglielmo'
    version = "2.0.0"
}

params {

    //Shared params
    outdir = params.outdir ?: "${manifest.name}_results"

    //RSEM params
    read_prep = 'stranded' // non_stranded
    reads = 'PE' // SE
    seed_length = ''
    aligner = ''
    rsem_ref_prefix = ''

    //GATK params
    gen_org='human'
    ref_fa=''
    probes=''
    ctp_genes=''
    gatk_form=''
    cov_calc=''

    //Picard params
    read_prep=''
    ref_flat=''
    ribo_intervals=''

    //Quality Stats params
    filter_trim=''
    min_pct_hq_reads=''

   //Read Groups
   read_grp_det=''

   //Summary Stats
   summary_mets_PE=''
   summary_mets_SE=''

}

env {
    NXF_ANSI_SUMMARY = true
    NXF_ANSI_LOG = true
    NXF_DEBUG = 2
}

report {
    enabled = true
    file = "${params.outdir}/report.html"
}

trace {
    enabled = true
    file = "${params.outdir}/trace.txt"
    fields = \
         "task_id,"   \
       + "hash,"      \
       + "process,"   \
       + "tag,"       \
       + "status,"    \
       + "exit,"      \
       + "start,"     \
       + "container," \
       + "cpus,"      \
       + "time,"      \
       + "disk,"      \
       + "memory,"    \
       + "duration,"  \
       + "realtime,"  \
       + "queue,"     \
       + "%cpu,"      \
       + "%mem,"      \
       + "rss,"       \
       + "vmem,"      \
       + "rchar,"     \
       + "wchar"
}
