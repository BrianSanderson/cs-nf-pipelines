params {
    // this is the name of the file in the workflow folder
    workflow_file = toy_example

    // this is the specific workflow from said file ex. TOY_EXAMPLE
    workflow = TOY_EXAMPLE

    // select config to use
    config = toy_example
    params = null

    // set outdirectory
    outdir = '.'

}

env {
  workDir = '/projects/compsci/guglib/toy-example/work'
}

singularity {
  enabled = true
  autoMounts = false
  cacheDir = '/projects/compsci/nextflow/containers'
}

manifest {
    name = "nf-tenx"
    author = "Bill Flynn, Martine Seignon"
    homePage = "https://github.com/TheJacksonLaboratory/nf-tenx"
    mainScript = "main.nf"
    nextflowVersion = "!>=20.10.0"
    version = "0.1.0"
}
