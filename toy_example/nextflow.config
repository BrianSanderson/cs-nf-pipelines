params {

  description = 'Bare Minimum Nextflow Script for Sumner (trims reads)'
  contact = 'Barry Guglielmo'
  outdir = '/home/guglib/bitbucket/nf/min/output'
  extension = '.fastq.gz'
  fq_path = '/home/guglib/rnaseqs/PE' // needs to be full path not relative ~/wont/work
  sample_command = 'echo "hello, world!" > hello.txt'

  // NOTE: if you have many paramiters that are commonly altered in the processes
  // use the -params-file option it takes a yaml list as input

  // trimming variables
  read_type = "PE"
  t_lead = 3
  t_trail = 3
  min_len = 36

}

singularity {
  enabled = true
  autoMounts = false
  cacheDir = '/home/guglib/cache'
}

process {
    withName:trim {
        container = 'quay.io/biocontainers/trimmomatic:0.32--hdfd78af_4'
        publishDir = "${params.outdir}/trimmed"
    }
    executor = 'slurm'
}
