params {

  description = 'Bare Minimum Nextflow Script for Sumner (trims reads)'
  contact = 'Barry Guglielmo'
  extension = '.fastq.gz'
  // trimming variables
  
  read_type = "PE"
  t_lead = 3
  t_trail = 3
  min_len = 36

}

singularity {
  enabled = true
  autoMounts = false
  cacheDir = '/home/guglib/bitbucket/nf_dsl2_testing/bare_minimum/cache'
}

process {
    withName:trim {
        container = 'quay.io/biocontainers/trimmomatic:0.32--hdfd78af_4'
    }
    executor = 'slurm'
}
